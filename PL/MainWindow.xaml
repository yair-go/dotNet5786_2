<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Hello WPF" Height="450" Width="800">
    <Grid>
        <Label Content="Hello World" HorizontalAlignment="Left" Margin="82,75,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Click_Me_Button" Content="Click Me" HorizontalAlignment="Left" Margin="82,141,0,0" VerticalAlignment="Top" Width="75" Background="Yellow" 
                Click="Button_Click" MouseRightButtonDown="Button_MouseRightButtonDown" MouseEnter="Click_Me_Button_MouseEnter" MouseLeave="Click_Me_Button_MouseLeave" />

        <!-- Improved ListView presentation for DO.Order -->
        <ListView x:Name="lv_orders" Margin="210,64,20,20" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.Resources>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="4"/>
                </Style>
            </ListView.Resources>

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" Width="80" DisplayMemberBinding="{Binding Id}" />
                    <GridViewColumn Header="Type" Width="100" DisplayMemberBinding="{Binding Type}" />
                    <GridViewColumn Header="Customer" Width="160" DisplayMemberBinding="{Binding CustomerName}" />
                    <GridViewColumn Header="Phone" Width="110" DisplayMemberBinding="{Binding CustomerPhone}" />
                    <GridViewColumn Header="Address" Width="240">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Address}" TextTrimming="CharacterEllipsis" ToolTip="{Binding Address}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Coords" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run Text="{Binding Latitude, StringFormat={}{0:F5}}"/>
                                    <Run Text=", "/>
                                    <Run Text="{Binding Longitude, StringFormat={}{0:F5}}"/>
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Opened" Width="150" DisplayMemberBinding="{Binding OpenedAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}" />

                    <GridViewColumn Header="Weight (kg)" Width="90">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Weight, StringFormat={}{0:F2}, TargetNullValue=-}" HorizontalAlignment="Right"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Vol (m³)" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Volume, StringFormat={}{0:F3}, TargetNullValue=-}" HorizontalAlignment="Right"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Fragile" Width="60" DisplayMemberBinding="{Binding IsFragile}" />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
